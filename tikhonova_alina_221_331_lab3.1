void task2(int *mas) {
    int elem;
    for (int i = 1; i < 20; i++) {//цикл от 2 элемента, для того, чтобы можно было выбрать потом первый элемент
        elem = mas[i];//сохраняю элемент
        int j = i - 1;
        while (elem < mas[j]) {//новый цикл от предыдущего до начала списка, если элемент меньше, то перезаписываю
            mas[j + 1] = mas[j];
            j--;
        }
        mas[j + 1] = elem;//возвращаю перезаписанный элемент
    }
    for (int s = 0; s < 20; s++) {
        std::cout << mas[s] << " ";
    }
}

